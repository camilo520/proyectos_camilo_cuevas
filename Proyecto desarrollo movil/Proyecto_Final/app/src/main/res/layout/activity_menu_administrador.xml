<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_administrador"
    android:background="@drawable/fondo_menus">>

    <EditText
        android:id="@+id/txt_usuario_administrador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="107dp"
        android:layout_y="91dp"
        android:ems="10"
        android:textStyle="bold"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="105dp"
        android:text="Usuario"
        android:textStyle="bold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_contraseña_administrador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="107dp"
        android:layout_y="202dp"
        android:ems="10"
        android:textStyle="bold"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="216dp"
        android:text="Contraseña"
        android:textStyle="bold"
        android:textSize="18sp" />

    <Button
        android:id="@+id/registrar_administrador"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_x="43dp"
        android:layout_y="358dp"
        android:background="@drawable/custom_button"
        android:text="Registrar"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20dp" />
    />

    <Button
        android:id="@+id/continuar_administrador"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_x="180dp"
        android:layout_y="359dp"
        android:background="@drawable/custom_button"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20dp" />

    <Button
        android:id="@+id/volver_administrador"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_x="113dp"
        android:layout_y="422dp"
        android:background="@drawable/custom_button"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_x="-3dp"
        android:layout_y="0dp"
        android:text="ADMINISTRADOR"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp" />
</AbsoluteLayout>