<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.administrarCurso"
    android:background="@drawable/fragments">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="34dp"
                android:layout_y="173dp"
                android:text="Salon numero:"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinner_salon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="34dp"
                android:layout_y="173dp"
                android:text="Materia"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_admin_materia_salon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="34dp"
                android:layout_y="173dp"
                android:text="Curso"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_admin_curso_salon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="34dp"
                android:layout_y="173dp"
                android:text="Duracion clase"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="34dp"
                android:layout_y="173dp"
                android:text="Fecha"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textofecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:background="@drawable/custom_button_fragments"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora del dia"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textohora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:background="@drawable/custom_button_fragments"/>

            <Button
                android:id="@+id/boton_agregar_espacio_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button_fragments"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="468dp" />


            <Button
                android:id="@+id/boton_modificar_espacio_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_button_fragments"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="468dp" />

            <Button
                android:id="@+id/boton_eliminar_espacio_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_button_fragments"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="466dp" />
        </LinearLayout>
    </ScrollView>


</AbsoluteLayout>